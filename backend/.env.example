# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=development

# API URLs
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="file:./prisma/dev.db"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
